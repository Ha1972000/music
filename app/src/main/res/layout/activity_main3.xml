<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFBABA"
    tools:context=".MainActivity3"
    tools:ignore="NewApi">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="404dp"
        android:layout_height="242dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:scrollbarDefaultDelayBeforeFade="100"
        android:scrollbarFadeDuration="100"
        android:scrollbarSize="0dp"
        android:src="@drawable/mua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_wrapBehaviorInParent="included"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/tbh"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Tên bài hát"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="230dp"
        android:layout_height="184dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ha"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbh"
        tools:ignore="MissingClass,MissingConstraints" />

    <ImageButton
        android:id="@+id/trolai"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:srcCompat="@drawable/ic_baseline_skip_previous_24"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/tiep"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/dung"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:srcCompat="@drawable/ic_baseline_skip_next_24"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/dung"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/chay"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:srcCompat="@drawable/ic_baseline_stop_24"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/first"
        android:layout_width="42dp"
        android:layout_height="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="00:00"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trolai"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="20dp"
        android:text="00:00"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/first"
        app:layout_constraintTop_toBottomOf="@+id/tiep"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="215dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/tbh"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <ImageView
        android:id="@+id/chay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toEndOf="@+id/trolai"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:srcCompat="@drawable/ic_baseline_pause_circle_filled_24" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="204dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/first"
        app:layout_constraintTop_toBottomOf="@+id/trolai" />


</androidx.constraintlayout.widget.ConstraintLayout>
